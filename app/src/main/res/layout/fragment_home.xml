<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/home_bg"
                                     android:focusable="true"
                                     android:focusableInTouchMode="true"
                                     android:orientation="vertical">


    <!--滚动-->
    <ScrollView

        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="53dp"
        android:scrollbars="none">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/fuwu_detail_title"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/title_lan">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="中国考试志愿网-家长端"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"/>

                <ImageView
                    android:id="@+id/home_to_ka"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/tishi"/>

            </RelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/home_relative"
                android:layout_width="match_parent"
                android:layout_height="540px">

                <com.fchj.czglgz.chengzhangguanli_high.view.AutoSwitchView
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <!--<com.zhy.autolayout.AutoLinearLayout-->
