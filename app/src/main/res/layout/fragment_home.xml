            <!--<include layout="@layout/activity_marquee_news"/>-->
            <!--5个标题-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:layout_margin="20px"

                android:background="@drawable/home_background">

                <com.zhy.autolayout.AutoLinearLayout

                    android:id="@+id/autoLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/frag_home_zx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20px"
                        android:drawableTop="@mipmap/zixun"
                        android:gravity="center"
                        android:text="生涯资讯"
                        android:textColor="@color/home_text"/>

                    <TextView
                        android:id="@+id/frag_home_zhuanjia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/autoLinearLayout"
                        android:layout_weight="1"
                        android:drawablePadding="20px"
                        android:drawableTop="@mipmap/zhuanjia"
                        android:gravity="center"
                        android:text="专家解答"
                        android:textColor="@color/home_text"/>

                    <TextView
                        android:id="@+id/frag_home_jiazhang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20px"
                        android:drawableTop="@mipmap/jiazhang"
                        android:gravity="center"
                        android:text="家长课堂"
                        android:textColor="@color/home_text"/>


                    <TextView
                        android:id="@+id/frag_home_xy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20px"
                        android:drawableTop="@mipmap/xiaoyuan"
                        android:gravity="center"
                        android:text="大学动态"
                        android:textColor="@color/home_text"/>


                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="1730px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/home_background"
                android:orientation="vertical">
                <!--1136px1050px-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="最新资讯"
                        android:textColor="@color/text_lan"
                        android:textSize="17sp"/>


                </RelativeLayout>

                <ListView
                    android:id="@+id/home_hd_list"
                    android:layout_width="match_parent"
                    android:layout_height="1630px"
                    android:scrollbars="none"/>


            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>