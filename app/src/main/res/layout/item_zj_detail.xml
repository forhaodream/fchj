<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@drawable/home_background"
                                       android:orientation="vertical">

    <ImageView
        android:id="@+id/zj_detail_touxiang"
        android:layout_width="190px"
        android:layout_height="190px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:src="@mipmap/teacher"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zj_detail_touxiang"
        android:orientation="vertical">


        <TextView
            android:id="@+id/zj_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/zj_detail_touxiang"
            android:layout_marginLeft="60px"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40px"
            android:layout_toEndOf="@+id/zj_detail_touxiang"
            android:text=""
            android:textColor="@color/title_lan"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/zj_detail_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:text="1"
            android:textColor="@color/text_gray"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/zj_detail_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="60px"
            android:maxLines="2"
            android:text="1"
            android:textColor="@color/text_gray"
            android:textSize="13sp"/>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>