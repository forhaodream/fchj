<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="240px"
                                       android:layout_marginTop="20px">

    <ImageView
        android:id="@+id/college_detail_head"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:src="@mipmap/teacher"/>

    <TextView
        android:id="@+id/college_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/college_detail_head"
        android:text="大连理工大学"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/college_detail_eng_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/college_detail_name"
        android:layout_marginBottom="6px"
        android:layout_marginLeft="38px"
        android:layout_toRightOf="@id/college_detail_head"
        android:text="Dalian What College"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/college_detail_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/college_detail_name"
        android:text="大连市"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"/>


</com.zhy.autolayout.AutoRelativeLayout>

