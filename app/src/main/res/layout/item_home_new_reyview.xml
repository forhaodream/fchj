<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400px"
    android:layout_height="480px"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_home_new_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/item_home_new_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_home_new_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:text="沈阳医科大学"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_home_new_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_home_new_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:text="Shenyang"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</android.support.v7.widget.CardView>