<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="160px"
                                       android:background="@android:color/white"
                                       android:minHeight="160px"
                                       android:orientation="vertical">

    <View
        android:id="@+id/item_best_list_view"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"/>

    <TextView
        android:id="@+id/item_best_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/item_best_list_view"
        android:text="工商管理"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_best_list_title"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@id/item_best_list_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_best_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="5"
            android:maxLines="1"
            android:text="工商管理类"
            android:textColor="@color/text_hui"
            android:textSize="12sp"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="@color/text_hui"/>

        <TextView
            android:id="@+id/item_best_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:maxEms="5"
            android:maxLines="1"
            android:text="管理学"
            android:textColor="@color/text_hui"
            android:textSize="12sp"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="@color/text_hui"/>

        <TextView
            android:id="@+id/item_best_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="本科"
            android:textColor="@color/text_hui"
            android:textSize="12sp"/>

    </com.zhy.autolayout.AutoLinearLayout>


    <ImageView
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:src="@mipmap/youjiantou"/>

</com.zhy.autolayout.AutoRelativeLayout>