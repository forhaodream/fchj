<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_os_pic"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:scaleType="fitXY"
                android:src="@mipmap/fchj_e"/>

            <TextView
                android:id="@+id/item_os_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/touming_hui_bg"
                android:padding="8px"
                android:textColor="@android:color/white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/item_os_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/touming_hui_bg"
                android:padding="8px"
                android:textColor="@android:color/white"
                android:textSize="13sp"/>


            android:padding="20px"


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_below="@id/item_os_pic"
                android:descendantFocusability="blocksDescendants">
                android:background="@drawable/item_popup_voca_bg"

                <ImageView
                    android:id="@+id/item_os_logo"
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:scaleType="fitXY"/>


                <TextView
                    android:id="@+id/item_os_chn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="40px"
                    android:layout_toRightOf="@id/item_os_logo"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/item_os_eng_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@id/item_os_logo"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="title"
                    android:textColor="@color/gray"
                    android:textSize="13sp"/>


                <Button
                    android:id="@+id/item_os_ask"
                    android:layout_width="200px"
                    android:layout_height="120px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/drak_blue_button"
                    android:text="咨询"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.CardView>
</com.zhy.autolayout.AutoLinearLayout>
