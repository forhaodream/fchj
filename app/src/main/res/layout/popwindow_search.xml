<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="@android:color/white">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<SearchView-->
        <!--android:id="@+id/search_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="160px"-->
        <!--android:layout_marginLeft="60px"-->
        <!--android:layout_marginRight="60px"/>-->

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px">

            <EditText
                android:id="@+id/popup_ed_edit"
                android:layout_width="0dp"
                android:layout_height="130px"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="50px"
                android:layout_weight="7"
                android:background="@drawable/gray_editview"
                android:drawableLeft="@mipmap/searchpic"
                android:drawablePadding="50px"
                android:text="请输入搜索内容"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/popup_ed_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40px"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/title_lan"
                android:textSize="18sp"/>

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>