<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@mipmap/login_bg"
                                       android:orientation="vertical">

    <ImageView
        android:id="@+id/title_fanhui"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="170px"
        android:src="@mipmap/fanhui"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/login_edit"
        android:layout_width="match_parent"
        android:layout_height="950px"
        android:layout_below="@id/title_fanhui"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="140px"
        android:background="@drawable/login_corners"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_reg_phone"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_margin="30px">

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox"
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"/>
        </android.support.design.widget.TextInputLayout>
        android:background="@drawable/editview_bg"


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_yanzheng"
                android:layout_width="460px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="验证码"/>

            android:background="@drawable/editview_bg"

            <Button
                android:id="@+id/zhuce_yzm_text"
                android:layout_width="320px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120px"
                android:layout_toRightOf="@id/ed_yanzheng"
                android:background="@drawable/yzm_circle"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="12sp"/>


        </com.zhy.autolayout.AutoRelativeLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_reg_psd_one"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_margin="30px">

            <EditText
                android:id="@+id/ed_psdfirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:password="true"/>
        </android.support.design.widget.TextInputLayout>
        android:background="@drawable/editview_bg"


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_reg_psd_two"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_margin="30px">

            <EditText
                android:id="@+id/ed_psdsecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认密码"
                android:password="true"/>
        </android.support.design.widget.TextInputLayout>
        android:background="@drawable/editview_bg"

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/login_reg_button"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_below="@+id/login_edit"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="51dp"
        android:background="@drawable/button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="立即注册"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>