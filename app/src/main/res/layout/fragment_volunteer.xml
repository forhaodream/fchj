<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fuwu_detail_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/title_lan">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="中国考试志愿网-家长端"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_title_size"/>

        <ImageView
            android:id="@+id/home_to_ka"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/tishi"/>

    </RelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="53dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cd_volunteer_college"
            android:layout_width="800px"
            android:layout_height="550px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="100px"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_one">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="100px"
                    android:text="@string/chaschool"
                    android:textColor="@android:color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"/>

            </com.zhy.autolayout.AutoRelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cd_volunteer_number"
            android:layout_width="800px"
            android:layout_height="550px"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"

            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_four">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100px"
                    android:text="@string/chanum"
                    android:textColor="@android:color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cd_volunteer_major"
            android:layout_width="800px"
            android:layout_height="550px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="60px"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/co_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="100px"
                    android:text="@string/chazy"
                    android:textColor="@android:color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </android.support.v7.widget.CardView>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>