<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@color/home_bg"
                                       android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/title_lan">

        <ImageView
            android:id="@+id/title_fanhui"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@mipmap/fanhui"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/title_fanhui"
            android:text="设置"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_title_size"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/setting_lin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setting_title"
        android:layout_marginTop="50px"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personal_xiugai_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/personal_xiugai_img_no"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="3dp"
                android:src="@mipmap/guanyuwomen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/personal_xiugai_img_no"
                android:text="修改密码"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/youjiantou"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/home_bg"/>

        <RelativeLayout
            android:id="@+id/setting_update_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/setting_update_img_no"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="3dp"
                android:src="@mipmap/update"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/youjiantou"/>

            <TextView
                android:id="@+id/setting_update_text_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/setting_update_img_no"
                android:text="检查更新"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/home_bg"/>

        <RelativeLayout
            android:id="@+id/personal_about_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/personal_update_img_no"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="3dp"
                android:src="@mipmap/guanyuwomen"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/youjiantou"/>

            <TextView
                android:id="@+id/personal_update_text_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/personal_update_img_no"
                android:text="关于我们"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/home_bg"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/setting_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ff2600">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退出登录"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>


    </RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>